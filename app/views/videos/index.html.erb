<div id="header">
	<h1>トップページ</h1>
	<%= link_to '新規動画登録', new_video_path %>
	<%= form_tag({action: :Search, id: @Search}, method: :get) do %>
		<%= search_field_tag :search_title %>
		<%= submit_tag '検索' %>
	<% end %>
</div><%# header %>

<% @videos.each do |video| %>
	<div class="videolink">
		<h2 id="title"><%= link_to video.title, video_path(video) %></h2>
		<% url = video.videourl.gsub(/http.+v=/, "") %>
		<%= link_to image_tag('http://i.ytimg.com/vi/' + url + '/default.jpg'), video_path(video) %>
	</div><%# videolink %>
	<p id="username"><%= video.user.username %></p>
	<p id="text"><%= video.text %></p>
	<% if video.user_id == current_user.id %>
		<%= link_to '編集する', edit_video_path(video) %>
		<%= link_to '削除する', video_path(video), method: :delete, data: { confirm: '削除してもいいですか？' } %>
	<% end -%>
	<hr>
<% end -%>
<br>
<%= link_to 'トップへ戻る', videos_path %>
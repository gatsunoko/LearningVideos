<%= form_for @video do |f| %>
	<% if @video.errors.any? %>
		<%= @video.errors.count %>個のエラーがあります<br>
		<% @video.errors.full_messages.each do |msg| %>
			<%= msg %><br>
		<% end -%>
	<% end -%>

	<p>タイトル</p>
	<%= f.text_field :title %><br>
	<p>動画URL</p>
	<%= f.text_field :videourl %><br>
	<p>紹介文</p>
	<%= f.text_area :text %><br>
	<%= f.submit %>
<% end -%>